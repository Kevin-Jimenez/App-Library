<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppLibrary" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_Blue</item>
        <item name="colorPrimaryDark">@color/primary_Blue</item>
        <item name="colorAccent">@color/primary_gold</item>
        <item name="colorOnError">@color/error</item>
        <item name="colorError">@color/error</item>


        <!-- Customize your theme here. -->
        <item name="shapeAppearanceSmallComponent">@style/shapeAparince.Mintic.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/shapeAparince.Mintic.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/shapeAparince.Mintic.Large</item>
        <item name="textAppearanceButton">@style/textApparence</item>
        <item name="colorControlNormal">@color/primary_white</item>
    </style>

    <style name="Theme.AppLibrary.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppLibrary.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AppLibrary.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeOverlay.AppLibrary.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/primary_white</item>
        <item name="fullscreenTextColor">@color/primary_Blue</item>
    </style>

    <style name="shapeAparince.Mintic.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">
            <item name="cornerSize">@dimen/corner_size</item>
            <item name="cornerFamily">rounded</item>
    </style>

    <style name="ImageProfile" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="shapeAparince.Mintic.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">@dimen/corner_size</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="shapeAparince.Mintic.Large" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSize">@dimen/corner_size</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="textApparence" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textSize">@dimen/text_button_size</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="textApparenceInputs" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto_mono_thin</item>
        <item name="android:textSize">@dimen/text_button_size</item>
    </style>

    <style name="textApparenceInputs.HeadLineS" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textColor">@color/primary_Blue</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="gendersDescriptions" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textColor">@color/secondary_Gray</item>
        <item name="android:textSize">@dimen/genderDescriptionText</item>
    </style>

    <style name="gendersDescriptions.resum" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/roboto_slab_bold</item>
        <item name="fontWeight">700</item>
        <item name="android:textColor">@color/secondary_Gray</item>
        <item name="android:textSize">@dimen/genderDescriptionTextResumen</item>
    </style>

    <style name="descripcionesLibros" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/roboto_slab_bold</item>
        <item name="fontWeight">700</item>
        <item name="android:textColor">@color/secondary_Gray</item>
        <item name="android:textSize">@dimen/descripcionlibro</item>
    </style>

    <style name="califications" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/roboto_slab_bold</item>

        <item name="android:textColor">@color/secondary_Gray</item>
        <item name="android:textSize">8sp</item>
    </style>
</resources>